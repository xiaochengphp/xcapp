/* pages/person/person.wxss */

.picker-content {
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 999;
    background-color: rgba(0, 0, 0, 0.6);
}

.picker-component {
    display: flex;
    position: fixed;
    width: 100%;
    height: 470rpx;
    bottom: 0;
    background-color: rgba(255, 255, 255, 1);
}

text {
    color: #999;
    display: inline-flex;
    position: fixed;
    margin-top: 20rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 34rpx;
    font-family: Arial, Helvetica, sans-serif;
}

.left-bt {
    left: 30rpx;
}

.right-bt {
    color: green;
    right: 30rpx;
}

.line {
    display: block;
    position: fixed;
    height: 1rpx;
    width: 100%;
    margin-top: 89rpx;
    background-color: #eee;
}

picker-view {
    background-color: white;
    padding: 0;
    width: 100%;
    height: 380rpx;
    bottom: 0;
    position: fixed;
}

picker-view-column view {
    vertical-align: middle;
    font-size: 34rpx;
    line-height: 34rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
